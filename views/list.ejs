<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>To do list</title>
    <link rel="stylesheet" href="css/styles.css">
  </head>
  <body>
    <!-- scriplet tags and ejs templating tags -->
    <div class="box" id="heading">
      <h1><%=currentDay%></h1>
    </div>

    <div class="box">

        <%  item.forEach(function(element){%>
          <form action="/delete" method="post">
            <div class="item">
            <input type="checkbox" name="checkbox" onchange="this.form.submit()" value="<%=element._id%>">
                <p><%= element.name %></p>
            </div>
            <input type="hidden" name="listName" value="<%=currentDay%>">
          </form>

        <%  });%>

        <form class="item" action="<%=route%>" method="post">
          <input type="text" name="newItem" placeholder="Enter new item" autocomplete="off">
          <button type="submit">+</button>
        </form>
    </div>




  </body>
</html>
